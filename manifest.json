{
	"manifest_version": 2,
	"name": "Improve Comments",
	"version": "1.0",
	"content_scripts": [
		{
			"matches": [
				"<all_urls>", "file://*"
			],
			"js": ["jquery.js", "content.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png"
	},
	"background": {
		"scripts": ["background.js"]
	}
}